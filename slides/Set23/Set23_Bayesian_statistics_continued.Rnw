\begin{frame}
\frametitle{Summary}

{\small
\[ \begin{array}{llll}
\mbox{Model} & \mbox{Conjugate Prior} & \mbox{Default values} & \mbox{Posterior} \\
\hline
Y\sim Bin(n,\theta) & \theta \sim Be(a,b) & a=b=1 & \theta|y \sim Be(a+y,a+n-y) \\
Y_i \ind Po(\lambda) & \lambda \sim Ga(a,b) & a=b=0 & \lambda|y \sim Ga(n\overline{y}, n) \\
Y_i \ind Exp(\lambda) & \lambda \sim Ga(a,b) & a=b=0 & \lambda|y \sim Ga(n, n\overline{y}) \\ \\
Y_i \ind N(\mu,\sigma^2) & \multicolumn{2}{c}{p(\mu,\sigma^2) \propto 1/\sigma^2} & \mu|\sigma^2,y \sim N(\overline{y}, \sigma^2/n) \\
&&&
\frac{1}{\sigma^2}|y \sim Ga\left(\frac{n-1}{2},\frac{(n-1)s^2}{2}\right) \\
\hline
\end{array} \]
}
